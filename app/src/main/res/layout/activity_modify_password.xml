<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        android:background="@color/navigationBar">
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/iconSize"
            android:layout_height="@dimen/iconSize"
            android:src="@mipmap/back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/iconMargin"
            android:layout_marginStart="@dimen/iconMargin" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textSize="@dimen/titleSize"
            android:textColor="@color/textTitle"
            android:text="修改密码"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lineGreen"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/ol"
            android:layout_width="32dp"
            android:layout_height="63dp"
            android:layout_marginLeft="40dp"
            android:src="@mipmap/old_password"/>
        <EditText
            android:id="@+id/password_old"
            android:background="@null"
            android:layout_width="200dp"
            android:layout_height="63dp"
            android:layout_toRightOf="@id/ol"
            android:layout_marginLeft="20dp"
            android:inputType="textPassword"
            android:textColor="#1b1b1b"
            android:textSize="18sp"
            android:hint="输入原密码"/>
        <TextView
            android:id="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3ebdc6"
            android:layout_alignBottom="@id/ol"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <ImageView
            android:id="@+id/nl1"
            android:layout_width="32dp"
            android:layout_height="63dp"
            android:layout_below="@id/tv1"
            android:layout_marginLeft="40dp"
            android:src="@mipmap/new_password"/>
        <EditText
            android:id="@+id/password_new1"
            android:background="@null"
            android:layout_width="200dp"
            android:layout_height="63dp"
            android:layout_toRightOf="@id/nl1"
            android:layout_below="@id/tv1"
            android:layout_marginLeft="20dp"
            android:inputType="textPassword"
            android:textColor="#1b1b1b"
            android:textSize="18sp"
            android:hint="输入新密码"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3ebdc6"
            android:layout_alignBottom="@id/nl1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <ImageView
            android:id="@+id/nl2"
            android:layout_width="32dp"
            android:layout_height="63dp"
            android:layout_below="@id/tv2"
            android:layout_marginLeft="40dp"
            android:src="@mipmap/new_password"/>
        <EditText
            android:id="@+id/password_new2"
            android:background="@null"
            android:layout_width="200dp"
            android:layout_height="63dp"
            android:layout_toRightOf="@id/nl2"
            android:layout_below="@id/tv2"
            android:layout_marginLeft="20dp"
            android:inputType="textPassword"
            android:textColor="#1b1b1b"
            android:textSize="18sp"
            android:hint="确认新密码"/>
        <TextView
            android:id="@+id/tv3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#3ebdc6"
            android:layout_alignBottom="@id/nl2"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@mipmap/bule_button"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:text="确定"/>
    </RelativeLayout>
</LinearLayout>